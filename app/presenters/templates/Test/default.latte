{block title}Test{/block}

{block style}
	<link rel="stylesheet" href="{$basePath}/css/testpage.css" xmlns="http://www.w3.org/1999/html">
{/block}

{block content}
	<div id="app">
		<form id="calc-form" @submit.prevent="check">
			<div class="row justify-content-center">
				<div class="col-12 text-center">
					Test this out!
				</div>
				<div class="col-7 col-md-6 col-lg-4 mt-2">
					<input v-model.number="inputNumber" @focus="$event.target.select()" id="calc-input" class="w-100" type="number"
						   placeholder="Proton number...">
				</div>
				<div class="col-5 col-md-4 col-lg-3 mt-2">
					<select v-model="inputNumber" ref="elementSelect" id="calc-select" class="w-100 h-100">
						<option value="">Z</option>
						<option v-for="element in elements" :value="element[0]">{{ element[1] }}</option>
					</select>
				</div>
			</div>
			<div class="row	mt-3 justify-content-center">
				<div class="col-12 text-center">
					Fill in the short configuration:
				</div>
				<div class="col-12 col-md-10 col-lg-7 mt-2">
					<input v-model="inputData" id="check-input" type="text" class="w-100 p-1" placeholder="4s2, 4p3, ..." autocomplete="off">
				</div>
			</div>
			<div class="row justify-content-center">
				<div class="col-12 col-md-10 col-lg-7 mt-2">
					<input id="calc-submit" type="submit" class="w-100 p-1" value="Check">
				</div>
			</div>
		</form>
		<div v-if="protonNumber" v-cloak class="text-center">
			<div class="row justify-content-center">
				<div class="col-12 col-md-10 col-lg-7 mt-2">
					<div v-if="isCorrect" class="correct">
						{{ lastData }} is correct!<br>
						<template v-if="removeSpaces(correctSyntax) !== this.inputDataStripped">
							Try this order next time&nbsp;ðŸ˜‰&nbsp;:<br>
							{{ correctSyntax }}
						</template>
					</div>
					<div v-else class="incorrect">
						{{ lastData }} is incorrect! ðŸ˜•
					</div>
					<div v-if="!isCorrect" class="correct mt-2">
						<div @click="showCorrect = !showCorrect" id="show-correct-wrap">
							<span :class="{ 'rotate-arrow': showCorrect }" class="arrow d-inline-block">â–¼</span>
							<span class="show-correct">Show me correct version.</span>
							<span :class="{ 'rotate-arrow': showCorrect }" class="arrow d-inline-block">â–¼</span>
						</div>
						<div v-if="showCorrect">
							{{ correctSyntax }}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{/block}

{block script}
	<script src="{$basePath}/js/testpage.js"></script>
{/block}
